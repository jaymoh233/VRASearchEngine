@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - VRA Search Engine</title>

    <!-- Sidebar styles -->
    <link href="~/Content/styles.css" rel="stylesheet" />

    <!-- Google icons -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,0,0" />

    @RenderSection("styles", required: false)
</head>
<body>
    <!-- Navbar -->
    <nav class="site-nav">
        <button class="sidebar-toggle">
            <span class="material-symbols-rounded">menu</span>
        </button>
    </nav>

    <div class="container">
        <!-- Sidebar -->
        <aside class="sidebar collapsed">
            <div class="sidebar-header">
                <img src="~/Content/vra-logo.png" alt="VRA Logo" class="header-logo" />
                <button class="sidebar-toggle">
                    <span class="material-symbols-rounded">chevron_left</span>
                </button>
            </div>

            <div class="sidebar-content">
                <form action="#" class="search-form">
                    <span class="material-symbols-rounded">search</span>
                    <input type="search" placeholder="Search..." required />
                </form>

                <ul class="menu-list">
                    <li class="menu-item">
                        <a href="@Url.Action("Index", "Searching")" class="menu-link active">
                            <span class="material-symbols-rounded">search</span>
                            <span class="menu-label">Search Employee</span>
                        </a>
                    </li>

                    <li class="menu-item">
                        <a href="@Url.Action("Index", "Department")" class="menu-link">
                            <span class="material-symbols-rounded">account_tree</span>
                            <span class="menu-label">Departments</span>
                        </a>
                    </li>

                    <li class="menu-item">
                        <a href="@Url.Action("Index", "Intern")" class="menu-link">
                            <span class="material-symbols-rounded">school</span>
                            <span class="menu-label">Interns</span>
                        </a>
                    </li>

                    <li class="menu-item">
                        <a href="@Url.Action("Index", "ServicePersonnel")" class="menu-link">
                            <span class="material-symbols-rounded">badge</span>
                            <span class="menu-label">NSS</span>
                        </a>
                    </li>

                    <li class="menu-item">
                        <a href="@Url.Action("Index", "Driver")" class="menu-link">
                            <span class="material-symbols-rounded">local_taxi</span>
                            <span class="menu-label">Drivers</span>
                        </a>
                    </li>

                    <li class="menu-item">
                        <a href="@Url.Action("Settings", "Admin")" class="menu-link">
                            <span class="material-symbols-rounded">settings</span>
                            <span class="menu-label">Settings</span>
                        </a>
                    </li>
                </ul>
            </div>

            <div class="sidebar-footer">
                <button class="theme-toggle">
                    <div class="theme-label">
                        <span class="theme-icon material-symbols-rounded">dark_mode</span>
                        <span class="theme-text">Dark Mode</span>
                    </div>
                    <div class="theme-toggle-track">
                        <div class="theme-toggle-indicator"></div>
                    </div>
                </button>
            </div>
        </aside>

        <!-- Main Content Area -->
        <div class="main-content">
            @RenderBody()
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/Scripts/scripts.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
